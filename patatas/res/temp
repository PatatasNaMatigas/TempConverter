import tkinter as tk

root = tk.Tk()
root.title("GIF in Tkinter")

# Load the GIF
frames = [tk.PhotoImage(file="res/fire/fire.gif", format=f"gif - {i}") for i in range(8)]

label = tk.Label(root)
label.pack()

frame_index = 0

def update_frame():
    global frame_index
    frame = frames[frame_index]
    frame_index = (frame_index + 1) % len(frames)
    label.config(image=frame)
    root.after(80, update_frame)

update_frame()
root.mainloop()
